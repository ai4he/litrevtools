{
  "name": "litrevtools",
  "version": "1.0.0",
  "description": "Isomorphic tool for creating systematic literature reviews using PRISMA methodology",
  "main": "dist/core/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/platforms/cli/index.ts",
    "cli": "node dist/platforms/cli/index.js",
    "web:dev": "ts-node src/platforms/web/server.ts",
    "frontend:install": "cd src/frontend && npm install",
    "frontend:build": "cd src/frontend && npm run build",
    "frontend:dev": "cd src/frontend && npm run dev",
    "web:build": "npm run frontend:build && tsc && npm run web:copy-static && npm run web:copy-frontend",
    "web:copy-static": "mkdir -p dist/platforms/web/public && cp -r src/platforms/web/public/* dist/platforms/web/public/ 2>/dev/null || true",
    "web:copy-frontend": "mkdir -p dist/frontend && cp -r src/frontend/dist dist/frontend/ 2>/dev/null || true",
    "web:start": "node dist/platforms/web/server.js",
    "desktop:dev": "NODE_ENV=development electron src/platforms/desktop/main.ts",
    "desktop:build": "npm run frontend:build && tsc && electron-builder",
    "mobile:init": "npx cap init",
    "mobile:add:android": "npx cap add android",
    "mobile:add:ios": "npx cap add ios",
    "mobile:sync": "npm run frontend:build && npx cap sync",
    "mobile:build": "npm run frontend:build && npm run build && npx cap sync",
    "mobile:run:android": "npm run mobile:sync && npx cap run android",
    "mobile:run:ios": "npm run mobile:sync && npx cap run ios",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "deploy:setup": "chmod +x scripts/*.sh && bash scripts/deploy.sh",
    "deploy:start": "pm2 start ecosystem.config.js",
    "deploy:restart": "pm2 restart litrevtools-web --update-env",
    "deploy:stop": "pm2 stop litrevtools-web",
    "deploy:logs": "pm2 logs litrevtools-web",
    "deploy:status": "pm2 list | grep litrevtools-web",
    "deploy": "npm run web:build && npm run deploy:restart && npm run deploy:status"
  },
  "keywords": [
    "prisma",
    "systematic-literature-review",
    "semantic-scholar",
    "research",
    "isomorphic",
    "llm",
    "ai-powered"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/ios": "^5.5.1",
    "@google/generative-ai": "^0.24.1",
    "archiver": "^6.0.1",
    "axios": "^1.6.2",
    "better-sqlite3": "^12.4.1",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "csv-stringify": "^6.4.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-auth-library": "^9.4.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^21.6.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "sharp": "^0.33.1",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0",
    "socks-proxy-agent": "^8.0.2",
    "uuid": "^9.0.1",
    "adm-zip": "^0.5.10"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.5.1",
    "@types/adm-zip": "^0.5.5",
    "@types/archiver": "^6.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cli-progress": "^3.11.5",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.litrevtools.app",
    "productName": "LitRevTools",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  }
}
